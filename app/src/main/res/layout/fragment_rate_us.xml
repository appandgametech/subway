<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateUsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:gravity="center|top"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:text="We would feedback, click below to rate our app. Once you click a rating you will be navigated to the playstore to give offical rating and/or be prompted for feedback."
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView_rating5"
                    android:layout_width="403dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rating_five" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:id="@+id/imageView_rating4"
                    android:layout_width="403dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rating_four" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:id="@+id/imageView_rating3"
                    android:layout_width="403dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rating_three" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:id="@+id/imageView_rating2"
                    android:layout_width="403dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rating_two" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageView
                    android:id="@+id/imageView_rating1"
                    android:layout_width="403dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rating_one" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>